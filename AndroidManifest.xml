		<!-- Changed app.HomeActivity to app.MainActivity -->
        <activity
            android:name="com.wearability.app.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <!-- Old theme caused issues, check with Chris if he uploaded: android:theme="@style/Theme.AppCompat.Light" -->

		<activity
            android:name="com.wearability.app.ExerciseList"
            android:label="@string/title_activity_exercise_list"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
        <activity
            android:name="com.wearability.app.StartActivity"
            android:label="@string/title_activity_start"
            android:theme="@android:style/Theme.Holo.Light" >
