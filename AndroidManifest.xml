                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearability.app.BodyDisplay" />
        </activity>
        <activity
            android:name="com.wearability.app.SummaryActivity"
            android:label="@string/title_activity_summary" >
        </activity>
        <activity
            android:name="com.wearability.app.Results"
            android:label="@string/title_activity_results"
            android:parentActivityName="com.wearability.app.BodyDisplay" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearability.app.BodyDisplay" />
        </activity>
         <activity
            android:name="com.wearability.app.ProgressActivity"
